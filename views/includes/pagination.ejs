<section class="pagination">
    <% if (hasPreviousPage){ %>
        <a href="?page=<%= currentPage - 1 %>"><%= currentPage - 1 %></a>
    <% } %>
    <a href="?page=<%= currentPage %>"><%= currentPage %></a>
    <% if (hasNextPage){ %>
        <a href="?page=<%= currentPage + 1 %>"><%= currentPage + 1 %></a>
    <% } %>
</section>